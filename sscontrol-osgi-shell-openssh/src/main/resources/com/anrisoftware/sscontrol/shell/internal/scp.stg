scpCmd(args) ::= <<
<sshChdir(args.chdir)>
<sshEnv(args.env)>
<scpCommand(args)>
>>

scpCommand(args) ::= <%
scp
<\ ><sshArgs(args)>
<\ ><sshDebug(args)>
<\ ><scpPort(args)>
<\ ><sshOptions(args, args.sshDefaultOptions)>
<\ ><sshOptions(args, args.sshOptions)>
<\ ><if(args.sshKey)><sshKeyOption(args)><endif>
<\ ><args.sshUser>@<args.sshHost>:
<args.src> <args.dest>
%>

scpPort(args) ::= <%
    
%>
