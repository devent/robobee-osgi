<?xml version="1.0" encoding="UTF-8"?>
<features name="tasklist-cdi-${project.version}" xmlns="http://karaf.apache.org/xmlns/features/v1.3.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.3.0 http://karaf.apache.org/xmlns/features/v1.3.0">

	<repository>mvn:org.apache.cxf.karaf/apache-cxf/3.1.3/xml/features</repository>
	<repository>mvn:org.ops4j.pax.jdbc/pax-jdbc-features/0.7.0/xml/features</repository>

	<feature name="example-tasklist-cdi" version="${project.version}">
		<feature>example-tasklist-cdi-persistence</feature>
		<feature>example-tasklist-cdi-ui</feature>
	</feature>

	<feature name="example-tasklist-cdi-persistence" version="${project.version}">
		<feature>pax-jdbc-h2</feature>
		<feature>pax-jdbc-config</feature>
		<feature>pax-jdbc-pool-dbcp2</feature>
		<feature>jndi</feature>
		<feature>transaction</feature>
		<feature version="[2.2, 3)">jpa</feature>
		<feature version="[4.3, 5)">hibernate</feature>
		<bundle>mvn:${project.groupId}/sscontrol-osgi-model/${project.version}</bundle>
		<bundle>mvn:${project.groupId}/sscontrol-osgi-persistence/${project.version}</bundle>
	</feature>

	<feature name="example-tasklist-cdi-service" version="${project.version}">
		<feature>cxf-features-logging</feature>
		<feature>cxf-jaxrs</feature>
		<bundle>mvn:${project.groupId}/sscontrol-osgi-service/${project.version}</bundle>
	</feature>

	<feature name="example-tasklist-cdi-ui" version="${project.version}">
		<feature>war</feature>
		<bundle>mvn:${project.groupId}/sscontrol-osgi-angular-ui/${project.version}</bundle>
	</feature>

	<feature name="example-tasklist-cdi-ui-old" version="${project.version}">
		<feature>http</feature>
		<feature>http-whiteboard</feature>
		<bundle>mvn:${project.groupId}/sscontrol-osgi-model/${project.version}</bundle>
		<bundle>mvn:${project.groupId}/sscontrol-osgi-ui/${project.version}</bundle>
	</feature>

</features>
