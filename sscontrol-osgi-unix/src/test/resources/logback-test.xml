<configuration>

	<appender name="TESTING_STYLE" class="ch.qos.logback.core.ConsoleAppender">
		<target>System.err</target>
		<encoder>
			<pattern>[%level] %-4relative [%thread] %logger{0} - %msg%n%rEx</pattern>
			<immediateFlush>false</immediateFlush>
		</encoder>
	</appender>

	<root level="ERROR">
		<appender-ref ref="TESTING_STYLE" />
	</root>

	<logger name="com.anrisoftware.globalpom.threads" level="ALL" />
    <logger name="com.anrisoftware.globalpom.exec.scriptprocess" level="TRACE" />
	<logger name="com.anrisoftware.sscontrol" level="ALL" />

</configuration>
